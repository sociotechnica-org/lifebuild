{
  "name": "@lifebuild/prototype-playground",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "license": "FSL-1.1-ALv2",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "lint-all": "pnpm lint:fix && pnpm format && pnpm typecheck",
    "deploy": "wrangler pages deploy dist --project-name lifebuild-prototypes"
  },
  "dependencies": {
    "@lifebuild/hex-grid-prototype": "workspace:*",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router-dom": "^7.7.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "catalog:",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "wrangler": "catalog:"
  }
}
