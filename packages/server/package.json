  "type": "module",
  "license": "FSL-1.1-ALv2",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node build.js",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "npx tsx scripts/integration-test.ts",
    "test:red-green": "npx tsx scripts/red-green-test.ts",
    "clean": "rm -rf data/*",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "lint-all": "pnpm lint:fix && pnpm format && pnpm typecheck"
  },
  "dependencies": {
    "@livestore/adapter-node": "catalog:",
    "@livestore/livestore": "catalog:",
    "@livestore/sync-cf": "catalog:",
    "@work-squared/shared": "workspace:*",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "pino": "^9.10.0",
    "pino-pretty": "^13.1.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "catalog:",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "esbuild": "^0.19.0",
    "esbuild-node-externals": "^1.9.0",
    "eslint": "catalog:",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "catalog:",
    "tsx": "catalog:",
