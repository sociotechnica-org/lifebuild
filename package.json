{
  "name": "work-squared-monorepo",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter @work-squared/web --filter @work-squared/worker --filter @work-squared/server dev",
    "dev:web": "pnpm --filter @work-squared/web dev",
    "dev:worker": "pnpm --filter @work-squared/worker dev",
    "dev:server": "pnpm --filter @work-squared/server dev",
    "dev:auth": "pnpm --filter @work-squared/auth-worker dev",
    "build": "pnpm -r build",
    "test": "pnpm --filter @work-squared/web test && pnpm --filter @work-squared/auth-worker test",
    "test:watch": "pnpm --filter @work-squared/web test:watch",
    "test:e2e": "pnpm --filter @work-squared/web test:e2e",
    "test:e2e:ui": "pnpm --filter @work-squared/web test:e2e:ui",
    "test:e2e:debug": "pnpm --filter @work-squared/web test:e2e:debug",
    "lint": "pnpm -r --if-present lint",
    "lint:fix": "pnpm -r --if-present lint:fix",
    "format": "pnpm -r --if-present format",
    "format:check": "pnpm -r --if-present format:check",
    "typecheck": "pnpm -r typecheck",
    "lint-all": "pnpm -r lint-all",
    "storybook": "pnpm --filter @work-squared/web storybook",
    "build-storybook": "pnpm --filter @work-squared/web build-storybook",
    "deploy:worker": "pnpm --filter @work-squared/worker deploy",
    "deploy:auth": "pnpm --filter @work-squared/auth-worker deploy"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@playwright/test": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^9.0.5",
    "eslint-plugin-unicorn": "^59.0.1",
    "playwright-mcp": "^0.0.12",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}